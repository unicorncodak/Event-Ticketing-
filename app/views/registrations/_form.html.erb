<div id="layoutAuthentication_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
                        <div class="card-body">
                        <%= form_with model: @user, url: sign_up_path do |f| %>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3 mb-md-0">
                                        <%= f.text_field :firstname, class: "form-control", placeholder: "Enter your first name", id: "inputFirstName", type: "text" %>
                                            <label for="inputFirstName">First name</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                        <%= f.text_field :lastname, class: "form-control", placeholder: "Enter your last name", id: "inputLastName", type: "text" %>
                                            <label for="inputLastName">Last name</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-floating mb-3">
                                    <%= f.text_field :email, class: "form-control", placeholder: "name@example.com", id: "inputEmail" %>
                                    <label for="inputEmail">Email address</label>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3 mb-md-0">
                                        <%= f.password_field :password, class: "form-control", placeholder: "Create a password", id: "inputPassword" %>
                                            <label for="inputPassword">Password</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3 mb-md-0">
                                        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password", id: "inputPasswordConfirm" %>
                                            <label for="inputPasswordConfirm">Confirm Password</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 mb-0">
                                    <div class="d-grid"><%= f.submit 'Create Account', class: 'btn btn-primary btn-block' %></div>
                                </div>
                            <% end %>
                        </div>
                        <div class="card-footer text-center py-3">
                            <div class="small"><a href="<%= sign_in_url %>">Have an account? Go to login</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
            